{
  "name": "root",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.6.0",
    "lerna": "^3.3.1"
  },
  "scripts": {
    "start": "npm -C ./app run start",
    "bootstrap": "cross-env NODE_ENV=development  lerna bootstrap",
    "publish": "lerna publish --registry http://localhost:4873/",
    "test": "jest --config jest.config.json"
  },
  "dependencies": {
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^2.4.1",
    "npmlog": "^4.1.2",
    "path": "^0.12.7",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "save-dev": "^2.0.0",
    "shelljs": "^0.8.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
